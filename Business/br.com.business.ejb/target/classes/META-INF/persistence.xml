<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="WebApp" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>WebApp</jta-data-source>
    <class>web.entitys.Categoria</class>
    <class>web.entitys.ComprovanteServico</class>
    <class>web.entitys.Conta</class>
    <class>web.entitys.HistSenha</class>
    <class>web.entitys.Login</class>
    <class>web.entitys.Servico</class>
    <class>web.entitys.StatusLogin</class>
    <class>web.entitys.StatusServico</class>
    <class>web.entitys.SubCategoria</class>
    <class>web.entitys.Usuario</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <validation-mode>NONE</validation-mode>
    <properties>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
